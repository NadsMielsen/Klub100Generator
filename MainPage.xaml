<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Klub100Generator.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button
                x:Name="GenerateBtn"
                Text="Generate"
                Clicked="OnGenerateClicked"
                HorizontalOptions="Fill" />

            <Label
                x:Name="SelectedFileLabel"
                Text="No file selected."
                FontAttributes="Italic"
                HorizontalOptions="Fill" />

            <Editor
                x:Name="LogTerminal"
                HeightRequest="120"
                IsReadOnly="True"
                AutoSize="TextChanges"
                Placeholder="Log output..."
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>